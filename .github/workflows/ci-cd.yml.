yaml <br> name: CI/CD Pipeline <br> on: <br> push: <br> branches: <br> - main <br> jobs: <br> deploy: <br> runs-on: ubuntu-latest <br> steps: <br> - name: Checkout code <br> uses: actions/checkout@v2 <br> - name: Set up Python <br> uses: actions/setup-python@v2 <br> with: <br> python-version: '3.9' <br> - name: Install dependencies <br> run: | <br> pip install -r requirements.txt <br> - name: Deploy to Cloud Functions <br> env: <br> GCP_PROJECT_ID: ${{ secrets.GCP_PROJECT_ID }} <br> GCP_SA_KEY: ${{ secrets.GCP_SA_KEY }} <br> run: | <br> echo $GCP_SA_KEY | base64 --decode > gcp-key.json <br> gcloud auth activate-service-account --key-file gcp-key.json <br> gcloud functions deploy deepseek-president-bot <br> --runtime python39 <br> --trigger-http <br> --allow-unauthenticated <br> --entry-point app <br> --source . <br> 
